---
export interface Props {
  columns?: number;
  gap?: string;
}

const { columns = 2, gap = "1.5rem" } = Astro.props;
---

<div class="column-list" style={`--columns: ${columns}; --gap: ${gap};`}>
  <slot />
</div>

<style>
  .column-list :global(ul) {
    display: grid;
    grid-template-columns: repeat(var(--columns, 2), 1fr);
    gap: var(--gap, 1.5rem);
    margin: 0;
    list-style: none;
    padding: 0;
  }

  .column-list :global(> ul > li) {
    break-inside: avoid;
    margin: 0;
    padding: 0 0 0 1rem;
    position: relative;
    line-height: 1.4;
  }

  .column-list :global(> ul > li):before {
    content: "â€¢";
    position: absolute;
    left: 0;
    top: 0;
    font-size: 1.5em;
    line-height: 1;
  }

  .column-list :global(ul ul) {
    display: block;
    list-style-type: disc;
    margin: 0.5rem 0 0 1rem;
    padding-left: 1rem;
  }

  @media (max-width: 768px) {
    .column-list :global(ul) {
      grid-template-columns: 1fr;
    }
  }
</style>
