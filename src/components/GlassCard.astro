---
export interface Props {
  title?: string;
  href?: string;
  class?: string;
}

const { title, href, class: className } = Astro.props;
---

{href ? (
  <a href={href} class={`glass-card ${className || ''}`}>
    {title && <h3>{title}</h3>}
    <slot />
  </a>
) : (
  <div class={`glass-card ${className || ''}`}>
    {title && <h3>{title}</h3>}
    <slot />
  </div>
)}

<style>
  .glass-card h3 {
    margin-top: 0;
    margin-bottom: 1rem;
    color: var(--sl-color-text);
    font-size: 1.25rem;
    font-weight: 600;
  }
  
  .glass-card p {
    margin-bottom: 0.75rem;
    color: var(--sl-color-gray-2);
    line-height: 1.6;
  }
  
  .glass-card p:last-child {
    margin-bottom: 0;
  }
  
  /* Link styling for clickable cards */
  a.glass-card {
    text-decoration: none;
    color: inherit;
    display: block;
  }
  
  a.glass-card:hover h3 {
    color: var(--sl-color-accent);
    transition: color 0.2s ease;
  }
  
  /* Add a subtle arrow for link cards */
  a.glass-card::after {
    content: "â†’";
    position: absolute;
    top: 1.5rem;
    right: 1.5rem;
    opacity: 0;
    transition: opacity 0.2s ease;
    color: var(--sl-color-accent);
    font-weight: bold;
  }
  
  a.glass-card {
    position: relative;
  }
  
  a.glass-card:hover::after {
    opacity: 1;
  }
</style>